---
interface Props {
  title?: string;
  description?: string;
  defaultPrimer?: string;
}

const { 
  title = "Primer â€” Beyond the Gradient",
  description = "An Opinionated Anti-Library for AI-driven Design. Code with Intention.",
  defaultPrimer = "rams-60"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-primer={defaultPrimer}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Montserrat:wght@400;700;900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Poppins:wght@400;700;900&family=Playfair+Display:wght@400;700&family=Lato:wght@400;700&family=Orbitron:wght@400;700;900&family=Poiret+One&display=swap" rel="stylesheet" />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" as="style" />
  
  <!-- Global Styles -->
  <style is:global>
    @import "../styles/global.css";
  </style>
  
  <!-- All Primer Themes -->
  <style is:global>
    @import "../primers/rams-60/theme.css";
    @import "../primers/ando-concrete/theme.css";
    @import "../primers/hara-void/theme.css";
    @import "../primers/barragan-wall/theme.css";
    @import "../primers/mondrian-neoplast/theme.css";
    @import "../primers/memphis-81/theme.css";
    @import "../primers/anderson-symmetry/theme.css";
    @import "../primers/vignelli-canon/theme.css";
    @import "../primers/neon-noir/theme.css";
    @import "../primers/gatsby-deco/theme.css";
  </style>
</head>
<body>
  <slot />
  <script src="../scripts/primer-controller.js"></script>
</body>
</html>
