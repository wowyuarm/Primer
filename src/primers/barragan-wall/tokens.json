{
  "name": "Barragán-Wall",
  "slug": "barragan-wall",
  "philosophy": "用色彩的体块，构建情感的空间",
  "constraint": "No Opacity, No Gradients. 每一个颜色都必须是100%不透明的、坚实的色块。",
  "palette": {
    "background": { "value": "#ED3D95", "role": "休克粉，如巴拉甘的粉色墙壁" },
    "surface": { "value": "#F5A623", "role": "太阳橙，温暖而强烈" },
    "text-main": { "value": "#FFFFFF", "role": "纯白，在高饱和度背景上阅读" },
    "text-muted": { "value": "#FAFAFA", "role": "微灰的白" },
    "primary": { "value": "#0057A8", "role": "克莱因蓝，深沉而有力" },
    "secondary": { "value": "#7B2D8E", "role": "皇家紫，神秘的对比色" }
  },
  "typography": {
    "fontFamily": {
      "primary": ["Montserrat", "Arial Black", "sans-serif"],
      "mono": ["Space Mono", "monospace"]
    },
    "scale": {
      "ratio": 1.618,
      "name": "Golden Ratio"
    },
    "lineHeight": {
      "tight": 1.1,
      "base": 1.3,
      "relaxed": 1.5
    }
  },
  "spacing": {
    "unit": 10,
    "system": "rhythmic-doubling",
    "scale": [10, 20, 40, 80, 160, 320]
  },
  "interaction": {
    "transition": "none",
    "philosophy": "瞬时、无过渡的状态变化"
  }
}
