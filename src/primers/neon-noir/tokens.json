{
  "name": "Neon-Noir",
  "slug": "neon-noir",
  "philosophy": "在黑暗中用光来引导、强调和创造情绪。",
  "constraint": "Light-Dark Ratio ≥ 1:7. 禁止中间调，要么深暗，要么发光。",
  "palette": {
    "background": { "value": "#0D0D0D", "role": "深空黑，永恒画布" },
    "surface": { "value": "#141414", "role": "夜幕，内容容器" },
    "text-main": { "value": "#E8E8E8", "role": "冷白光文字" },
    "primary": { "value": "#00F0FF", "role": "青霓虹，主要交互" },
    "secondary": { "value": "#FF00FF", "role": "品红霓虹，次要强调" },
    "accent": { "value": "#FF3366", "role": "红霓虹，警告/危险" }
  },
  "typography": {
    "fontFamily": {
      "display": ["Orbitron", "Eurostile", "Bank Gothic", "sans-serif"],
      "primary": ["Inter", "Roboto", "SF Pro Display", "sans-serif"],
      "mono": ["JetBrains Mono", "Fira Code", "monospace"]
    },
    "scale": {
      "ratio": 1.414,
      "name": "Augmented Fourth"
    },
    "lineHeight": {
      "tight": 1.1,
      "base": 1.6,
      "relaxed": 1.8
    }
  },
  "spacing": {
    "unit": 8,
    "system": "modular",
    "scale": [8, 16, 24, 40, 64, 96]
  },
  "effects": {
    "glow": {
      "cyan": "0 0 20px #00F0FF",
      "magenta": "0 0 20px #FF00FF",
      "red": "0 0 20px #FF3366"
    }
  },
  "interaction": {
    "transition": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
    "philosophy": "激活时发光，如霓虹灯亮起"
  }
}
