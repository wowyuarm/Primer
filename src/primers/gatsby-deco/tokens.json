{
  "name": "Gatsby-Deco",
  "slug": "gatsby-deco",
  "philosophy": "几何的精确、金色的奢华、仪式感与优雅。",
  "constraint": "Gold for Decoration Only. 金色仅用于边框和装饰，占比不超过 5%。",
  "palette": {
    "background": { "value": "#0A1628", "role": "午夜蓝，深邃画布" },
    "surface": { "value": "#132238", "role": "海军蓝，内容区" },
    "text-main": { "value": "#F5F5F0", "role": "象牙白文字" },
    "gold": { "value": "#D4AF37", "role": "神圣金色，仅用于装饰" },
    "secondary": { "value": "#8B4D6E", "role": "勃艮第酒红，辅助强调" }
  },
  "typography": {
    "fontFamily": {
      "display": ["Playfair Display", "Didot", "Georgia", "serif"],
      "decorative": ["Poiret One", "Josefin Sans", "sans-serif"],
      "primary": ["Lato", "Optima", "Segoe UI", "sans-serif"]
    },
    "scale": {
      "ratio": 1.414,
      "name": "Augmented Fourth"
    },
    "lineHeight": {
      "tight": 1.1,
      "base": 1.6,
      "relaxed": 1.8
    }
  },
  "spacing": {
    "unit": 8,
    "system": "symmetric",
    "scale": [8, 16, 32, 48, 80, 128]
  },
  "patterns": {
    "sunburst": "Radial lines emanating from center",
    "fan": "Repeating fan/shell motif",
    "zigzag": "Horizontal zigzag lines",
    "chevron": "Diagonal chevron stripes"
  },
  "interaction": {
    "transition": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
    "philosophy": "优雅从容，如爵士乐的节拍"
  }
}
