{
  "name": "Ando-Concrete",
  "slug": "ando-concrete",
  "philosophy": "光、影与混凝土的诗意对话",
  "constraint": "Color for Text & Interaction Only, Never for Surfaces. 整个界面的结构感必须完全通过灰阶的明暗对比来构建。",
  "palette": {
    "background": { "value": "#D8D8D8", "role": "浅混凝土灰，如清水混凝土表面" },
    "surface": { "value": "#EAEAEA", "role": "更亮的混凝土灰，模拟光照面" },
    "text-main": { "value": "#333333", "role": "深灰文本，融入背景" },
    "text-muted": { "value": "#888888", "role": "中灰，如阴影中的文字" },
    "primary": { "value": "#6B7A8F", "role": "静谧蓝，代表水或天空" },
    "border": { "value": "#C0C0C0", "role": "边界与分隔" }
  },
  "typography": {
    "fontFamily": {
      "display": ["Cormorant Garamond", "Georgia", "serif"],
      "primary": ["Avenir", "Nunito Sans", "sans-serif"],
      "mono": ["JetBrains Mono", "monospace"]
    },
    "scale": {
      "ratio": 1.414,
      "name": "Augmented Fourth"
    },
    "lineHeight": {
      "tight": 1.3,
      "base": 1.7,
      "relaxed": 2
    }
  },
  "spacing": {
    "unit": 8,
    "system": "geometric",
    "scale": [8, 16, 32, 64, 128, 256]
  },
  "interaction": {
    "transition": "opacity 0.5s ease-in-out",
    "philosophy": "缓慢、柔和的淡入淡出"
  }
}
