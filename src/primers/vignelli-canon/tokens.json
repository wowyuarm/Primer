{
  "name": "Vignelli-Canon",
  "slug": "vignelli-canon",
  "philosophy": "设计是学科，不是自我表达。信息清晰度至上。",
  "constraint": "Single Typeface Family Only. 禁止混用字体，层级通过字重和大小表达。",
  "palette": {
    "background": { "value": "#FFFFFF", "role": "纯白画布" },
    "surface": { "value": "#FAFAFA", "role": "内容容器" },
    "text-main": { "value": "#1A1A1A", "role": "主要文本，近黑" },
    "text-muted": { "value": "#6B6B6B", "role": "次要文本" },
    "primary": { "value": "#FF0000", "role": "Vignelli 红，仅用于关键强调" }
  },
  "typography": {
    "fontFamily": {
      "primary": ["Helvetica Neue", "Helvetica", "Inter", "Arial", "sans-serif"],
      "constraint": "Same family for all text"
    },
    "scale": {
      "ratio": 1.333,
      "name": "Perfect Fourth"
    },
    "lineHeight": {
      "tight": 1.1,
      "base": 1.5,
      "relaxed": 1.8
    }
  },
  "spacing": {
    "unit": 8,
    "system": "grid-multiples",
    "scale": [8, 16, 24, 32, 48, 64, 96, 128]
  },
  "grid": {
    "columns": 12,
    "gap": 24,
    "philosophy": "所有元素必须对齐网格线"
  },
  "interaction": {
    "transition": "150ms ease-out",
    "philosophy": "迅速且无感"
  }
}
